<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" version="3.9.0" group="fields" method="upgrade">
    <name>PLG_FIELDS_FILEPICKER</name>
    <creationDate>2021-06-08</creationDate>
    <author>Pieter-Jan de Vries/Obix webtechniek</author>
    <authorEmail>pieter@obix.nl</authorEmail>
    <authorUrl>https://www.obix.nl</authorUrl>
    <copyright>(C) Obix webtechniek</copyright>
    <license>GNU General Public License version 2 or later</license>
    <version>1.0.0</version>
    <description>PLG_FIELDS_FILEPICKER_XML_DESCRIPTION</description>

    <files>
        <filename plugin="filepicker">filepicker.php</filename>
        <folder>fields</folder>
        <folder>language</folder>
        <folder>layouts</folder>
        <folder>libraries</folder>
        <folder>media</folder>
        <folder>params</folder>
        <folder>tmpl</folder>
    </files>

    <fileset>
        <files target="tmp">
            <file>fooba</file>
        </files>
    </fileset>

    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/plugins/fields/filepicker/fields">
                <!-- mode="files" -->
                <!-- include="/\.(gif|jpg|jpeg|png|svg)$/" -->
                <field name="baseDir"
                       type="filepicker"
                       label="PLG_FIELDS_FILEPICKER_BASE_DIR_LABEL"
                       description="PLG_FIELDS_FILEPICKER_BASE_DIR_DESC"
                       directory="/"
                       show_hidden="false"
                       recursive="false"
                       multiple="false"
                       exclude=""
                       ignore=""
                       display_height="300"
                />

                <field name="mode"
                       type="list"
                       default="files"
                       multiple="true"
                       label="PLG_FIELDS_FILEPICKER_MODE_LABEL"
                       description ="PLG_FIELDS_FILEPICKER_MODE_DESC"
                >
                    <option value="files">PLG_FIELDS_FILEPICKER_MODE_FILES</option>
                    <option value="folders">PLG_FIELDS_FILEPICKER_MODE_FOLDERS</option>
                </field>
<!--
                <field name="recursive"
                       type="radio"
                       label="PLG_FIELDS_FILEPICKER_RECURSIVE_LABEL"
                       description="PLG_FIELDS_FILEPICKER_RECURSIVE_DESC"
                       default="0"
                       class="btn-group btn-group-yesno"
                       filter="integer"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
-->
                <field name="showHidden"
                       type="radio"
                       label="PLG_FIELDS_FILEPICKER_SHOW_HIDDEN_LABEL"
                       description="PLG_FIELDS_FILEPICKER_SHOW_HIDDEN_DESC"
                       default="0"
                       class="btn-group btn-group-yesno"
                       filter="integer"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
<!--
                <field name="multiple"
                       type="radio"
                       label="PLG_FIELDS_FILEPICKER_MULTIPLE_LABEL"
                       description="PLG_FIELDS_FILEPICKER_MULTIPLE_DESC"
                       default="0"
                       class="btn-group btn-group-yesno"
                       filter="integer"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
-->
                <field name="exclude"
                       type="text"
                       label="PLG_FIELDS_FILEPICKER_EXCLUDE_LABEL"
                       description="PLG_FIELDS_FILEPICKER_EXCLUDE_DESC"
                />

                <field name="include"
                       type="text"
                       label="PLG_FIELDS_FILEPICKER_INCLUDE_LABEL"
                       description="PLG_FIELDS_FILEPICKER_INCLUDE_DESC"
                />

                <field name="ignore"
                       type="textarea"
                       label="PLG_FIELDS_FILEPICKER_IGNORE_LABEL"
                       description="PLG_FIELDS_FILEPICKER_IGNORE_DESC"
                       default="CVS,.svn,.git,.idea,.DS_Store,__MACOSX"
                />

                <field name="displayHeight"
                       type="text"
                       label="PLG_FIELDS_FILEPICKER_DISPLAY_HEIGHT_LABEL"
                       description="PLG_FIELDS_FILEPICKER_DISPLAY_HEIGHT_DESC"
                       default="300"
                />
            </fieldset>
        </fields>
    </config>

    <scriptfile>script.php</scriptfile>
</extension>
